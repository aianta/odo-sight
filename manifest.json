{
    "manifest_version": 3,
    "name": "Odo Sight",
    "version": "0.1",
    "description": "Loads LogUI, dom-effects.js and provides additional supporting functionality for odo bot to map out an application.",
    "content_scripts": [
        {
            "matches": ["*://localhost/*"],
            "js": [
                "scripts/globalThis.js",
                "/scripts/constants.js",
                "/scripts/stateManager.js",
                "scripts/main.js"
            ],
            "run_at": "document_start"
            
        }
    ],
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "webRequestFilterResponse",
        "webNavigation"
    ],
    "background":{
        "scripts": [
            "/libs/jquery-3.6.4.min.js",
            "/scripts/constants.js",
            "/libs/axios.min.js",
            "/scripts/stateManager.js",
            "/scripts/websocketDispatcher.js",
            "/scripts/localDispatcher.js",
            "/scripts/realtimeDispatcher.js",
            "/scripts/background.js"
            ]
    },
    "options_ui":{
        "page": "/options/options.html"
    },
    "action":{
        "default_icon":{
            "48":"informly_icon.png"
        },
        "default_popup": "popup/menu/menu.html",
        "default_title": "Extension Control Panel"
    },
    "web_accessible_resources": [
        {
          "resources": [ 
            "/scripts/handlerMagic.js",
            "/scripts/guidance.js",
            "/libs/logui.bundle.js",
            "/libs/dom-effects.js"
        ],
          "matches": [ "*://localhost/*" ]
        }],
    "browser_specific_settings": {
        "gecko":{
            "id": "odosight@ualberta.ca"
        }
    }
   
}